{
    "openapi": "3.0.0",
    "info": {
        "title": "API Shop Cart",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/v1/cars/summary": {
            "post": {
                "tags": [
                    "Cars"
                ],
                "summary": "Mostrar Resumen",
                "operationId": "bbdbbeb9d4dd998412486ce7b67554a9",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "products"
                                ],
                                "properties": {
                                    "products": {
                                        "type": "array",
                                        "items": {
                                            "required": [
                                                "id",
                                                "quantity"
                                            ],
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": "1"
                                                },
                                                "quantity": {
                                                    "type": "integer",
                                                    "example": "2"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Resumen obtenido con éxito.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": "true"
                                        },
                                        "type": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "OK"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Datos de entrada no válidos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "products": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The products field is required."
                                                    }
                                                },
                                                "products.0.id": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The products.0.id field is required."
                                                    }
                                                },
                                                "products.0.quantity": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The products.0.quantity field is required."
                                                    }
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Mostrar productos",
                "operationId": "436bb320702324d6b7aea6a4993d692f",
                "responses": {
                    "200": {
                        "description": "Mostrar todos los productos."
                    },
                    "500": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        },
        "/api/v1/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Mostrar producto",
                "operationId": "12c3b5c0331b16ee7bc98e5aa8365318",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Mostrar un solo producto."
                    },
                    "404": {
                        "description": "Producto no encontrado."
                    },
                    "500": {
                        "description": "Ha ocurrido un error."
                    }
                }
            }
        }
    }
}